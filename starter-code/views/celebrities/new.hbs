<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Add new Celebrity</h2>
            <form action="/celebrities" method="post">
                <div class="form-group">
                    <label for="name">Celebrity Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter celebrity name"
                        required>
                </div>
                <div class="form-group">
                    <label for="occupation">Celebrity Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation"
                        placeholder="Enter celebrity occupation" required>
                </div>
                <div class="form-group">
                    <label for="catchPhrase">Celebrity Catch Phrase</label>
                    <input type="text" class="form-control" id="catchPhrase" name="catchPhrase"
                        placeholder="Enter celebrity catch Phrase" required>
                </div>
                {{#if error}}
                <p>{{error}}</p>
                {{/if}}
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>