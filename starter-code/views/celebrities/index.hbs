<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Celebrities List</h2>
            <ul>
                {{#each celebrities}}
                <li>
                    <a href="/celebrities/{{_id}}">{{name}}</a>
                    <form action="celebrities/{{_id}}/delete" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                    <form action="celebrities/{{_id}}/edit" method="GET">
                        <button type="submit">Edit</button>
                    </form>
                </li>
                {{/each}}
            </ul>

            <a href="/celebrities/new">Add New Celebrity</a>
        </div>
    </div>
</div>